<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/head.ejs'); %>
    <title>Chats | <%= process.env.APP_NAME %></title>
    <link href="../assets/css/chattemp.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
          integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>

<body class="">
<div class="wrapper">
    <%- include('../components/sidebar.ejs', {slug: 'chats'}); %>
    <div class="main-panel">
        <%- include('../components/navbar.ejs', {name: 'Chats', url: '/chats'}); %>
        <div class="content">
            <div class="container-fluid">
                <!--Content goes here-->
                <div id="react-all-chats-component">

                </div>
                <!--End content-->
            </div>
        </div>
<!--        <%- include('../components/footer.ejs'); %>-->
    </div>
</div>

<%- include('../components/js-scripts.ejs'); %>

<!--Load MomentJS for time formatting-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.min.js"
        crossorigin="anonymous" referrerpolicy="no-referrer">
</script>

<% if (process.env.NODE_ENV === 'development') { %>
<!-- Load React Development -->
<script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
<script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>

<!--Adding Babel Compiler-->
<script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

<!-- Load React component -->
<script type="text/babel" data-type="module" src="../assets/js/custom/react/all-chats-component.js"></script>
<% } %>

<% if (process.env.NODE_ENV === 'production') { %>
<!-- Load React Production -->
<script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
<script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>

<!-- Load compiled React component -->
<script type="module" src="../assets/js/custom/react/compiled-all-chats-component.js"></script>
<% } %>

</body>
</html>
